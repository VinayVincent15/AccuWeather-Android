<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">


    <!-- Bottom right side 2dp Shadow -->
    <item >
        <shape android:shape="rectangle">
            <gradient android:startColor="#80222222"
                android:endColor="#80222222"
                android:type="linear"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>

    <!-- Bottom 2dp Shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient android:startColor="#80222222"
                android:endColor="#80222222"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>

    <!-- White Top color -->
    <item android:bottom="8px" android:right="8px">
        <shape android:shape="rectangle">
            <solid android:color="@color/search_bg" />
            <corners android:radius="5dp"/>
        </shape>
    </item>

</layer-list>